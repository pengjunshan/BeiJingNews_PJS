<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="horizontal"
    android:padding="3dp"
    android:layout_margin="3dp"
    android:background="@drawable/item_shopping_selector"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        >

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_alignParentLeft="true"
        android:layout_width="120dp"
        android:scaleType="fitXY"
        android:layout_height="180dp"
        android:src="@drawable/home_scroll_default"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_margin="10dp"
            >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="联想（Lenovo）拯救者14.0英寸游戏本（i7-4720HQ 4G 1T硬盘 GTX960M 2G独显 FHD IPS屏 背光键盘）黑"
                android:lines="3"
                android:textSize="14sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33000000"
                android:layout_marginTop="3dp"
                ></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥4688.00"
                    android:textSize="14sp"
                    android:textColor="@color/material_red"
                    />

                <Button
                    android:id="@+id/btn_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/btn_pay_selector"
                    android:text="加入购物车"
                    android:textColor="#ffffff"
                    android:layout_alignParentRight="true"
                    android:textSize="10sp"
                    android:layout_margin="3dp"
                    />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>